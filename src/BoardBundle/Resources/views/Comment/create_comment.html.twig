{% extends "::base.html.twig" %}

{% block title %}BoardBundle:Announcement:create{% endblock %}
{% block body %}
    <div class="container">
    <h1>Dodaj nowy komentarz</h1>
    {% if app.user %}
        {% if errors is defined %}
            {% for error in errors %}
                <p> {{ error.message }}</p>
            {% endfor %}
        {% else %}
            {{ form_start (form) }}
            {{ form_widget (form) }}
            {{ form_end (form) }}
        {% endif %}
        <hr/>
        <a href="{{ path('showAll') }}">Powrót do listy ogłoszeń</a><br/><br/>
        <a href="http://localhost:8000/">Powrót do strony głównej</a>
    {% else %}
        <h4 style="color: crimson">Aby dodać komentarz musisz być zalogowany!</h4>
        <hr/>
        <a href="{{ path('showAll') }}">Powrót do listy ogłoszeń</a><br/><br/>
        <a href="http://localhost:8000/">Powrót do strony głównej</a>
    {% endif %}
    </div>
{% endblock %}