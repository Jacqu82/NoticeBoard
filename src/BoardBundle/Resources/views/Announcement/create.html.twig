{% extends "::base.html.twig" %}

{% block title %}BoardBundle:Announcement:create{% endblock %}
{% block body %}
    <div class="container">
    <h1>Dodaj nowe ogłoszenie</h1>
    {% if app.user %}
        {% if errors is defined %}
            {% for error in errors %}
                <p> {{ error.message }}</p>
            {% endfor %}
        {% else %}
            {{ form_start (form) }}
            {{ form_widget (form) }}
            {{ form_end (form) }}
        {% endif %}
    {% else %}
        <h4 style="color: crimson">Aby dodać ogłoszenie musisz być zalogowany!</h4>
    {% endif %}
    <hr/>
        <a href="{{ path('start_page') }}">Powrót do strony głównej</a>
    </div>
{% endblock %}