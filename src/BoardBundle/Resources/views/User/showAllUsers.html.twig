{% extends "::base.html.twig" %}

{% block title %}BoardBundle:User:show{% endblock %}
{% block body %}
    <div class="container">
    <h1>Znajdź ogłoszenie po użytkowniku</h1>
    {% for user in users %}
        <h2>Ogłoszenia użytkownika: {{ user.username }}</h2>
        {% for announcement in user.announcements %}
            <p><a href="{{ path('show_details', {'id':announcement.id}) }}">{{ announcement.title }}</a></p>
        {% endfor %}
        <hr/>
    {% endfor %}
        <a href="{{ path('start_page') }}">Powrót do strony głównej</a>
    </div>
{% endblock %}