<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
    <link href="{{ asset('bundles/framework/css/style.css') }}" rel="stylesheet"/>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    {% endblock %}
</head>
<body>
{% block body %}
    <div>
        <h1>Tablica ogłoszeń.pl</h1>
        {% if not app.user %}
            <h4 style="color: crimson">Nie jesteś zalogowany!</h4>
            <a href="http://localhost:8000/login">Zaloguj się</a><br/>
            <small>lub</small><br/>
            <a href="http://localhost:8000/register/">Załóż nowe konto</a>
            <hr/>
            <p>
                <a href="{{ path('create', {}) }}">
                    Dodaj ogłoszenie
                </a>
            </p>
            <p>
                <a href="{{ path('showAll', {}) }}">
                    Przeglądaj wszystkie ogłoszenia
                </a>
            </p>
                <a href="{{ path('showAllCategories') }}">
                    Przeglądaj ogłoszenia<br/>
                </a>
                <small>(po kategorii)</small><br/><br/>
                <a href="{{ path('showAllUsers') }}">
                    Przeglądaj ogłoszenia<br/>
                </a>
                <small>(po użytkownikach)</small><br/>
        {% else %}
            Zalogowany jako: {{ data.userName }}
            <p>
                <a href="{{ path('create', {}) }}">
                    <h3>Dodaj ogłoszenie</h3>
                </a>
            </p>
            <p>
                <a href="{{ path('showAll', {}) }}">
                    <h3>Przeglądaj wszystkie ogłoszenia</h3>
                </a>
            </p>
            <p>
                <a href="{{ path('showAllCategories') }}">
                    <strong>Przeglądaj ogłoszenia</strong><br/>
                </a>
                <small>(po kategorii)</small>
            </p>
            <p>
                <a href="{{ path('showAllUsers') }}">
                    <strong>Przeglądaj ogłoszenia</strong><br/>
                </a>
                <small>(po użytkownikach)</small>
            </p>
                <p>
                    <a href="{{ path('createCategory', {}) }}">
                        <strong>Dodaj kategorię</strong><br/>
                    </a>
                    <small>(tylko dla admina)</small>
                </p>
            <hr/>
            <a href="http://localhost:8000/logout">Wyloguj się</a>
        {% endif %}
    </div>
{% endblock %}
{% block javascripts %}{% endblock %}
<div class="footer">2017 &copy Tablica ogłoszeń.pl</div>
</body>
</html>